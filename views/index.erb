<html>
  <head>
  	<title>Word Finder</title>
  	<meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
  	<link rel='stylesheet' media="screen,projection" href='stylesheets/screen.css' />
	
  	<!--[if IE]>
  		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  	<![endif]-->

  	<script src='http://code.jquery.com/jquery-latest.js' type="text/javascript"></script>
  	
	  
  </head>
  <body>
    <div id="wrap">
      <img id="title" src="images/title.png" alt="Word Finder"/>

      <div id="labels">
        <img src="images/numLetters.png" alt="Number of Letters">
      <img id="firstLetterImg"src="images/firstLetter.png" alt="First Letter">
      <img id="containsImg" src="images/contains.png" alt="Contains">
      <img id="lastLetterImg" src="images/lastLetter.png" alt="Last Letter">
      </div>

    	<div id="word-form">
        <form method="get" action="/hi">
          <input id="numLetters" type="text" name="numLetters" />
          <input id="firstLetter" type="text" name="firstLetter" />
          <input id="cLetter" type="text" name="cLetter" />
          <input id="lastLetter" type="text" name="lastLetter" />
          <input id="submit" type="submit" value="Go"  />
					<div id="ajaxBusy"><p><img src="images/loading.gif"/></p></div>
        </form>
    		
    	</div>
		<div id="word-results">
      <% 
      if @results
        @colSize = (@results.length / 2)
        
        @colOneResults = @results.slice(0, @colSize);
        @colTwoResults = @results - @colOneResults;
      end
      %>
      
      <div id="col1">
        <% if @colOneResults %>
  		    <ul>
            <% @colOneResults.each do |result| %>
          <li><%= result %></li>
          <% end %>
  		  	</ul>
  		  <% end %>
      </div>
      
      <div id="col2">
        <% if @colTwoResults%>
  		    <ul>
  		  	<% @colTwoResults.each do |result| %>
          <li><%= result %></li>
          <% end %>
  		  	</ul>
  		  <% end %>
      </div>

		</div>
    </div>
    <script src='js/main.js' type="text/javascript"></script>
  </body>

</html>